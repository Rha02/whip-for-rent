{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "overrides": [
        {
            "files": [
                "**/tests/**/*.ts"
            ], // Adjust the pattern if needed
            "rules": {
                "@typescript-eslint/no-var-requires": "off"
            }
        }
    ]
}